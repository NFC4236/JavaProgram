package forLoopPack;

public class Counting {

	public static void main(String[] args) {
		// Write a program to print numbers from 1 to 10.
		
		System.out.println("Counting 1 to 10");
		
		
		for(int i = 1; i<=10 ; i++) {
			System.out.println(i);
		}	

	}

}

//Program 2

package forLoopPack;

public class EvenNumberPrint {

	public static void main(String[] args) {
		// Write a program to print even numbers between 1 and 20.
		
		System.out.println("Print Even Numbers");
		
		for(int i = 1; i<=20 ; i++) {
			if(i % 2 == 0) {
				System.out.println(i);
			}
		}
	}

}

//Program 3
package forLoopPack;

public class OddNumberPrint {

	public static void main(String[] args) {
		// Write a program to print odd numbers between 1 and 20.
		
        System.out.println("Print Odd Numbers");
		
		for(int i = 1; i<=20 ; i++) {
			if(i % 2 != 0) {
				System.out.println(i);
			}
		}

	}

}
