package forLoopPack;

public class PrintArrayElements {

	public static void main(String[] args) {
		// Write a program to print all the elements of an array.
		
		 System.out.println("**Print Array Element** ");
			
		 String[] arr = {"Hello","Java" , "Programmer"};
			for(int i = 0; i < 3 ; i++) {
					System.out.println(arr[i]);
				}
	}

}
//Program 5

package forLoopPack;

public class SumOfNumbers {

	public static void main(String[] args) {
		// Write a program to calculate the sum of numbers from 1 to 10.
		
		System.out.println("**Sum of 1 to 10 Number**");
		int result =0;
		for(int i = 1 ; i<=10 ; i++) {
			
			 result+=i;
			System.out.println(result);
		}

	}

}

//Program 6
package forLoopPack;

import java.util.Scanner;

public class PrintTable {

	public static void main(String[] args) {
		// Write a program to print a multiplication table of a given number.
		
		Scanner input = new Scanner(System.in);
		int number;
		
        System.out.println("Enter Number ");
        number = input.nextInt();
        
        System.out.println("Print Table of " +number);
        
        for(int i = 1 ; i<=10 ; i++) {
        	System.out.println(number +" x " +i+ " = " +(number*i));
        }     
	}

}


